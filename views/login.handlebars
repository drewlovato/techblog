<form id="loginForm">
    <section class="login-container">
        <div class="form-title">
            Login
        </div>
        <div class="input-section">
            <label for="textEmail" id="label-input">Email</label>
            <input type="text" id="textEmail" class="inputBox" />
        </div>
        <div class="input-section">
            <label for="textPassword" id="label-input">Password</label>
            <input type="text" id="textPassword" class="inputBox" />
        </div>
        <div class="btnSubmit">
            <button class="btn" type="submit">Submit</button>
        </div>

        <div class="sign-up-section">
            Don't have an account yet,<a href="/createAccount" class="sign-up-link"> Sign Up</a>
        </div>
    </section>
</form>

<script src="/js/login.js"></script>